<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginTop="25dp"
    android:padding="8dp">

    <!-- Header part that is always visible -->
    <TextView
        android:id="@+id/processTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Process" />

    <TextView
        android:id="@+id/personTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person" />

    <TextView
        android:id="@+id/modelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model" />

    <!-- Hidden container for trial details -->
    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <!-- Add TextViews for each trial -->
        <TextView
            android:id="@+id/trial1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 1" />

        <TextView
            android:id="@+id/trial2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 2" />

        <!-- Continue adding TextViews for trials 3 to 10 -->

        <TextView
            android:id="@+id/trial3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 3" />

        <TextView
            android:id="@+id/trial4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 4" />

        <TextView
            android:id="@+id/trial5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 5" />

        <TextView
            android:id="@+id/trial6TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 6" />

        <TextView
            android:id="@+id/trial7TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 7" />

        <TextView
            android:id="@+id/trial8TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 8" />

        <TextView
            android:id="@+id/trial9TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 9" />

        <TextView
            android:id="@+id/trial10TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial 10" />

    </LinearLayout>

</LinearLayout>